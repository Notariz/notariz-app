{
    "include": ["src", "types"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "noEmit": true,
        "target": "es2019",
        "module": "commonjs",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "isolatedModules": true,
        "typeRoots": ["node_modules/@types"]
    }
}
